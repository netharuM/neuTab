{
    "manifest_version": 2,
    "name": "neuTab",
    "version" : "0.3",
    "web_accessible_resources": [
        "assets/*",
        "dist/*"
    ],
    "chrome_url_overrides":{
        "newtab": "./public/index.html"
    },
    "permissions":[
        "topSites",
        "storage",
        "chrome://favicon/"
    ],
    "browser_action":{
        "default_title": "neuTab",
        "default_icon": "./assets/icon.png"
    },
    "icons":{
        "16": "./assets/icon.png",
        "32": "./assets/icon.png",
        "48": "./assets/icon.png",
        "64": "./assets/icon.png",
        "96": "./assets/icon.png"
    },
    "content_security_policy": "style-src 'unsafe-inline' 'self';default-src 'self';img-src 'self' data: chrome://favicon;"
}